<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharma.deepak.musicstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistActivity"
            android:label="@string/title_activity_artist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AlbumActivity"
            android:label="@string/title_activity_album"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GenreActivity"
            android:label="@string/title_activity_genre"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/title_activity_playlist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PaymentActivity"
            android:label="@string/title_pay"
           ></activity>
    </application>

</manifest>